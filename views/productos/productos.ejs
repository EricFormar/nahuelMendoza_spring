<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://kit.fontawesome.com/97045d8aa4.js" crossorigin="anonymous"></script>
    <title>Document</title>
</head>

<body>
    <main>
        <%-include("../partials/header.ejs") %>

            <div class="conteiner-productos">
                <h2 class="product-titulo">Seccion Rolls</h2>
                <% roll.forEach(({id,nombre,precio,categoria,imagen}) => { %>
                    <section class="Rolls">
                <article>
                    <div class="producto">
                        <a href="/productos/detalle/<%= id %>">
                            <img src="/images/<%= imagen %>" alt="producto">
                        
                            <div class="nombre">
                                <p><%= nombre %></p></div>
                            <div class="precio">
                               <span> <h2>$<%= precio %></h2></span>
                            </div> 
                            <button type="submit" class="boton-comprar">Comprar</button>
                            
                        </a>
                        </div>
                    </article>
                </section>
                    <% }) %>
                
                <div class="producto-niguiris">
                    <h2 class="product-titulo">Seccion Niguiris</h2>
                    <% niguiri.forEach(({id,nombre,precio,categoria,imagen}) => { %>
                        <section class="Rolls">
                    <article>
                        <div class="producto">
                            <a href="/productos/detalle/<%= id %>">
                                <img src="/images/<%= imagen %>" alt="producto">
                            
                                <div class="nombre">
                                    <p><%= nombre %></p>
                                </div>
                                <div class="precio">
                                   <span> <h2>$<%= precio %></h2></span>
                                </div> 
                                
                                <button type="submit" class="boton-comprar">Comprar</button>
                            </a>
                            </div>
                        </article>
                    </section>
                        <% }) %>
            </div>
           
        </main>
        <%-include("../partials/footer.ejs") %>
    

</html>